<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <style type="text/css">

        b {
            color: red;
        }

        .red {
            color: red;
            font-weight: bold;
        }

        body {
            margin-top: 2px;
            margin-bottom: 2px;
        }

        .leftMenu {
            margin-right: -15px;
            padding-bottom: 0;
        }

            .leftMenu :first-child {
                margin-top: 0;
            }

            .leftMenu .list-group {
                margin-bottom: 0;
                border-radius: 0;
            }

            .leftMenu .list-group-item {
                font-size: 14px;
                margin-left: -34px;
                margin-right: -34px;
                padding-top: 7px;
                padding-bottom: 7px;
            }

                .leftMenu .list-group-item:first-child {
                    margin-top: -15px;
                }

                .leftMenu .list-group-item:last-child {
                    margin-bottom: -15px;
                }

                .leftMenu .list-group-item:hover {
                    background-color: #fbe77a;
                    color: red;
                }

                .leftMenu .list-group-item:focus {
                    color: red;
                }
    </style>

    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")  *@
    @Styles.Render(VirtualPathStrings.jQueryUICss)
    @Styles.Render(VirtualPathStrings.jQueryUI)
    @Styles.Render(VirtualPathStrings.jQueryAjax)
    @Styles.Render(VirtualPathStrings.BootstrapCss)
    @Scripts.Render(VirtualPathStrings.Modernizr)
    @Styles.Render(VirtualPathStrings.jQueryValidate)

    @* @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    @Scripts.Render(VirtualPathStrings.jQuery)
    @Scripts.Render(VirtualPathStrings.Bootstrap)
    @RenderSection("scripts", required: false)
    <style>
        img#yzu {
            width: 100%;
            height: 10vw;
        }
        /* class="img-responsive center-block "*/

    </style>
</head>
<body>
    <div class="container ">
        <img id="yzu" src="~/images/yzu2.jpg" />
    </div>

    <div class="navbar navbar-inverse ">
        @*removed from avobe : navbar-fixed-top*@
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SEMYPROJECT", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Submit", "Submit2", "Home")</li>
                    <li> @Html.ActionLink("Area1st", "Index", "Testinfo", new { area = "Area1st", id = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="col-md-3">
            <div class="leftMenu panel panel-success" >
                <h3 class="btn-success">The sixth class</h3>
            </div>
            @*1.o1.30*@`
        </div>
        <div class="col-md-9">


            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

   
</body>
</html>
